# Liquid AI Vision Kit Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Build Configuration
# =============================================================================

# Target platform for compilation
# Options: X86_SIMULATION, ARM_CORTEX_M7, PX4, JETSON_NANO, RASPBERRY_PI
TARGET_PLATFORM=X86_SIMULATION

# Build type
# Options: Debug, Release, RelWithDebInfo, MinSizeRel
CMAKE_BUILD_TYPE=Debug

# Number of parallel build jobs (default: number of CPU cores)
BUILD_JOBS=4

# Enable/disable ccache for faster builds
USE_CCACHE=true

# =============================================================================
# Hardware Configuration
# =============================================================================

# Camera device path (for Linux systems)
CAMERA_DEVICE=/dev/video0

# Camera resolution (width x height)
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Camera frame rate (fps)
CAMERA_FPS=30

# Flight controller serial port
FC_SERIAL_PORT=/dev/ttyUSB0

# Flight controller baud rate
FC_BAUD_RATE=115200

# =============================================================================
# Liquid Neural Network Configuration
# =============================================================================

# Default model path
LNN_MODEL_PATH=models/obstacle_avoidance.lnn

# Neural network inference frequency (Hz)
LNN_INFERENCE_FREQUENCY=50

# Maximum inference time (milliseconds)
LNN_MAX_INFERENCE_TIME=20

# ODE solver configuration
# Options: EULER, RK4, ADAPTIVE_RK4, FIXED_POINT_RK4
ODE_SOLVER=FIXED_POINT_RK4

# ODE solver timestep (seconds)
ODE_TIMESTEP=0.02

# Number of ODE integration steps
ODE_INTEGRATION_STEPS=5

# =============================================================================
# Performance and Resource Limits
# =============================================================================

# Maximum memory usage (KB)
MAX_MEMORY_KB=256

# Maximum power consumption (mW)
MAX_POWER_MW=500

# CPU usage limit (percentage)
MAX_CPU_PERCENT=80

# Stack size limit (KB)
MAX_STACK_KB=4

# Heap size limit (KB)
MAX_HEAP_KB=64

# =============================================================================
# Safety Configuration
# =============================================================================

# Enable safety checks
SAFETY_ENABLED=true

# Maximum allowed velocity (m/s)
MAX_VELOCITY=5.0

# Maximum allowed yaw rate (rad/s)
MAX_YAW_RATE=1.0

# Minimum confidence threshold for actions
MIN_CONFIDENCE=0.8

# Failsafe timeout (milliseconds)
FAILSAFE_TIMEOUT=1000

# Emergency landing mode
# Options: IMMEDIATE, RTL, HOLD_POSITION
EMERGENCY_MODE=HOLD_POSITION

# =============================================================================
# Logging and Debugging
# =============================================================================

# Log level
# Options: TRACE, DEBUG, INFO, WARN, ERROR, FATAL
LOG_LEVEL=INFO

# Log output destination
# Options: CONSOLE, FILE, SYSLOG, MAVLINK
LOG_OUTPUT=CONSOLE

# Log file path (when LOG_OUTPUT=FILE)
LOG_FILE_PATH=/tmp/liquid_vision.log

# Maximum log file size (MB)
LOG_MAX_SIZE_MB=10

# Number of log files to keep
LOG_MAX_FILES=5

# Enable performance profiling
PROFILING_ENABLED=false

# Profiling output directory
PROFILING_OUTPUT_DIR=/tmp/profiling

# =============================================================================
# Development and Testing
# =============================================================================

# Enable development mode (extra checks, verbose output)
DEVELOPMENT_MODE=true

# Enable unit test execution
RUN_UNIT_TESTS=true

# Enable integration tests
RUN_INTEGRATION_TESTS=true

# Enable hardware-in-loop tests
RUN_HIL_TESTS=false

# Test data directory
TEST_DATA_DIR=tests/data

# Enable mock hardware for testing
USE_MOCK_HARDWARE=true

# Enable simulation mode
SIMULATION_MODE=true

# Gazebo world file (for simulation)
GAZEBO_WORLD=worlds/empty.world

# =============================================================================
# Network and Communication
# =============================================================================

# MAVLink system ID
MAVLINK_SYSTEM_ID=1

# MAVLink component ID
MAVLINK_COMPONENT_ID=1

# Ground control station IP
GCS_IP=127.0.0.1

# Ground control station port
GCS_PORT=14550

# Enable telemetry
TELEMETRY_ENABLED=true

# Telemetry update rate (Hz)
TELEMETRY_RATE=10

# =============================================================================
# Model and Data Paths
# =============================================================================

# Models directory
MODELS_DIR=models

# Training data directory
TRAINING_DATA_DIR=data/training

# Validation data directory
VALIDATION_DATA_DIR=data/validation

# Test data directory
TEST_DATA_DIR=data/test

# Configuration files directory
CONFIG_DIR=config

# Calibration data directory
CALIBRATION_DIR=calibration

# =============================================================================
# External Dependencies
# =============================================================================

# OpenCV installation path (if custom)
OPENCV_DIR=/usr/local

# Eigen3 installation path (if custom)
EIGEN3_DIR=/usr/local

# PX4 firmware path (for PX4 integration)
PX4_FIRMWARE_DIR=/opt/px4

# ROS2 installation path
ROS2_INSTALL_DIR=/opt/ros/humble

# =============================================================================
# Deployment Configuration
# =============================================================================

# Deployment target
# Options: DEVELOPMENT, STAGING, PRODUCTION
DEPLOYMENT_TARGET=DEVELOPMENT

# Enable remote updates
REMOTE_UPDATES_ENABLED=false

# Update server URL
UPDATE_SERVER_URL=https://updates.liquid-ai-vision-kit.com

# Device identifier (for fleet management)
DEVICE_ID=liquid-vision-dev-001

# Organization identifier
ORG_ID=liquid-ai-vision

# =============================================================================
# Security Configuration
# =============================================================================

# Enable secure boot verification
SECURE_BOOT=false

# Model signature verification
VERIFY_MODEL_SIGNATURE=false

# Public key path for signature verification
PUBLIC_KEY_PATH=keys/public.pem

# Enable encrypted communication
ENCRYPTED_COMMUNICATION=false

# TLS certificate path
TLS_CERT_PATH=certs/device.crt

# TLS private key path
TLS_KEY_PATH=certs/device.key

# =============================================================================
# Advanced Configuration
# =============================================================================

# Custom compiler flags
CUSTOM_CFLAGS=-O2 -march=native

# Custom linker flags
CUSTOM_LDFLAGS=-static

# Enable Link Time Optimization
LTO_ENABLED=false

# Enable Profile Guided Optimization
PGO_ENABLED=false

# Custom memory allocator
# Options: SYSTEM, TCMALLOC, JEMALLOC
MEMORY_ALLOCATOR=SYSTEM

# Enable real-time scheduling
REALTIME_SCHEDULING=false

# Real-time priority (1-99)
REALTIME_PRIORITY=50

# CPU affinity mask (hex)
CPU_AFFINITY=0xFF

# =============================================================================
# Monitoring and Metrics
# =============================================================================

# Enable system monitoring
MONITORING_ENABLED=true

# Monitoring update interval (seconds)
MONITORING_INTERVAL=1

# Enable performance metrics collection
METRICS_ENABLED=true

# Metrics export format
# Options: PROMETHEUS, JSON, CSV
METRICS_FORMAT=JSON

# Metrics export interval (seconds)
METRICS_INTERVAL=10

# Health check endpoint port
HEALTH_CHECK_PORT=8090

# =============================================================================
# Experimental Features
# =============================================================================

# Enable experimental features (use with caution)
EXPERIMENTAL_FEATURES=false

# Enable adaptive computation
ADAPTIVE_COMPUTATION=false

# Enable multi-threading
MULTI_THREADING=false

# Number of worker threads
WORKER_THREADS=2

# Enable SIMD optimizations
SIMD_OPTIMIZATIONS=true

# Enable GPU acceleration (if available)
GPU_ACCELERATION=false