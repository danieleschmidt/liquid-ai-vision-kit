# Liquid Vision Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://liquid_vision:password@localhost:5432/liquid_vision_db
REDIS_URL=redis://localhost:6379/0

# Model Storage
MODEL_STORAGE_PATH=/var/lib/liquid_vision/models
MODEL_CACHE_SIZE_MB=512

# Flight Controller Settings
FLIGHT_CONTROLLER_TYPE=SIMULATION  # Options: PX4, SIMULATION, ARDUPILOT
FLIGHT_CONTROLLER_PORT=/dev/ttyACM0
FLIGHT_CONTROLLER_BAUDRATE=57600

# Camera Configuration
CAMERA_DEVICE=/dev/video0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Safety Settings
SAFETY_ENABLED=true
MAX_ALTITUDE_M=50
MAX_VELOCITY_MS=5
GEOFENCE_RADIUS_M=100
MIN_BATTERY_PERCENT=20

# Telemetry and Logging
TELEMETRY_ENABLED=true
TELEMETRY_PORT=14550
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE_PATH=/var/log/liquid_vision/liquid_vision.log
LOG_ROTATE_SIZE_MB=100
LOG_ROTATE_COUNT=5

# Performance Tuning
MAX_INFERENCE_TIME_MS=20
MEMORY_LIMIT_KB=256
ADAPTIVE_TIMESTEP=true
POWER_BUDGET_MW=500

# API Configuration
API_ENABLED=true
API_PORT=8080
API_HOST=0.0.0.0
API_KEY=your-api-key-here
API_RATE_LIMIT=100  # requests per minute

# Monitoring and Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# Development Settings
DEV_MODE=false
HOT_RELOAD=false
PROFILE_ENABLED=false
BENCHMARK_ON_START=false

# Cloud Integration (optional)
CLOUD_SYNC_ENABLED=false
CLOUD_API_ENDPOINT=https://api.liquid-vision.io
CLOUD_API_KEY=your-cloud-api-key
CLOUD_SYNC_INTERVAL_SECONDS=300

# Model Training
TRAINING_DATA_PATH=/var/lib/liquid_vision/training_data
VALIDATION_SPLIT=0.2
BATCH_SIZE=32
LEARNING_RATE=0.001
EPOCHS=100

# Hardware Acceleration
USE_GPU=false
CUDA_DEVICE_ID=0
USE_TENSORRT=false
USE_OPENVINO=false

# Simulation Settings
SIMULATION_ENABLED=true
GAZEBO_WORLD_FILE=worlds/forest_obstacles.world
SIMULATION_REAL_TIME_FACTOR=1.0